---
// Props para recibir la imagen, el título y el texto del párrafo
const { imageSrc, title, paragraph } = Astro.props;
---

<div class="max-w-sm rounded overflow-hidden shadow-lg bg-white">
  <img class="w-full h-48 object-cover" src={imageSrc} alt={title} />
  <div class="p-6 text-center lg:text-left">
    <h2 class="text-xl font-bold mb-2">{title}</h2>
    <p class="text-gray-700 text-base">
      {paragraph}
    </p>
  </div>
</div>

<style>
  @media (max-width: 768px) {
    .text-center {
      text-align: center;
    }
    .text-left {
      text-align: left;
    }
  }
</style>
